<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/graphic_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:lines="1"
        android:text="f(x)"
        android:textColor="@color/main_color"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/graphic_text"
        app:layout_constraintEnd_toStartOf="@+id/graphic_text"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/graphic_text" />

    <EditText
        android:id="@+id/graphic_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toBottomOf="@+id/graphic_delete"
        app:layout_constraintEnd_toStartOf="@+id/graphic_delete"
        app:layout_constraintStart_toEndOf="@+id/graphic_name"
        app:layout_constraintTop_toTopOf="@+id/graphic_delete" />

    <Button
        android:id="@+id/graphic_delete"
        android:layout_width="50dp"
        android:layout_height="40dp"
        android:text="@string/minus"
        android:textColor="@color/white"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/graphic_text"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>